
<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">{{title}}</view>
            <view wx:for="{{messages}}" wx:key="index">
               <view class="weui-msg__desc" >
                <text selectable="true">{{item}}</text>
                </view>
            </view>
            <view wx:for="{{images}}" wx:key="index">
              <image src="{{item}}"></image>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
              <view class="weui-footer__text">{{footer}}</view>
            </view>
        </view>
    </view>
</view>